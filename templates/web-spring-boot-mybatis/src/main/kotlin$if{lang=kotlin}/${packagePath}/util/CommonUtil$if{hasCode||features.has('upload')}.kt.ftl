package ${packageName}.util<#if features.has('upload')>import java.text.DecimalFormatimport kotlin.math.floorimport kotlin.math.lnimport kotlin.math.pow</#if>/** * 通用工具类 * @author ${author} * @since ${now?string("yyyy-MM-dd zzzz")} */object CommonUtil {<#if hasCode>    fun formatCode(max: Int): String {        return String.format("%06d", max + 1)    }</#if><#if features.has('upload')>    fun renderFileSize(fileSize: Long): String {        val arr = arrayOf("Bytes", "KB", "MB", "GB", "TB", "PB", "EB", "ZB", "YB")        val index = (floor(ln(fileSize.toDouble()) / ln(1024.toDouble()))).toInt()        var size = fileSize / 1024.toDouble().pow(index)        size = DecimalFormat("#.00").format(size).toDouble()        return "$size${r"$"}{arr[index]}"    }</#if>}