package ${packageName}.util<#if features.has('upload')>import java.text.DecimalFormat</#if>/** * 通用工具类 * @author ${author} * @since ${now?string("yyyy-MM-dd zzzz")} */object CommonUtil {<#if hasCode>    fun formatCode(max: Int): String {        return String.format("%06d", max + 1)    }</#if><#if features.has('upload')>    fun renderFileSize(long fileSize): String {        val arr = arrayOf("Bytes", "KB", "MB", "GB", "TB", "PB", "EB", "ZB", "YB")        val index = (Math.floor(Math.log(fileSize) / Math.log(1024))).toInt()        val size = fileSize / Math.pow(1024, index)        size = DecimalFormat("#.00").format(size).toDouble()        return size + arr[index]    }</#if>}