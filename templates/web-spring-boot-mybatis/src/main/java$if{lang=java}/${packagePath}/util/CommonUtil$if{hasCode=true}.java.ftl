package ${packageName}.util;import java.text.DecimalFormat;/** * 通用工具类 * @author ${author} * @since ${now?string("yyyy-MM-dd zzzz")} */public class CommonUtil {    public static String formatCode(int max) {        return String.format("%06d", max + 1);    }    public static String renderFileSize(long fileSize) {        String[] arr = {"Bytes", "KB", "MB", "GB", "TB", "PB", "EB", "ZB", "YB"};        int index = (int) (Math.floor(Math.log(fileSize) / Math.log(1024)));        double size = fileSize / Math.pow(1024, index);        size = Double.parseDouble(new DecimalFormat("#.00").format(size));        return size + arr[index];    }}